<mvc:View
    controllerName="com.sp.cust.customer.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:s="sap.f.semantic"
>
    <s:SemanticPage id="main_page">
        <s:titleHeading>
            <Title
                id="main_title"
                text="New Customer Table" >
            </Title>
            
        </s:titleHeading>
        <s:content>
            <Table
                id="main_table"
                headerText="Customers"
            >
                <columns>
                    <Column id="col_cid">
                        <Text id="cid" text="Customer ID"/>
                    </Column>
                    <Column id="col_cname">
                        <Text id="cname" text="Customer Name" />
                    </Column>    
                    <Column id="col_gender">
                        <Text id="gender" text="Gender" />
                    </Column>               
                </columns>
                <items> 
                    <ColumnListItem ><cells><ObjectIdentifier title="Hello"/><Text text="Anna Wintertur"/><Text text="Female"/></cells></ColumnListItem>
                    <ColumnListItem ><cells><ObjectIdentifier title="Hello2"/><Text text="Schaffhausen"/><Text text="Male"/></cells></ColumnListItem>
                </items>
            </Table>
        </s:content>
    </s:SemanticPage>
</mvc:View>
